<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ToastActivity"
    android:orientation="vertical"
    android:padding="10dp">
    <Button
        android:id="@+id/btn_toastcustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast提示"/>
    <Button
        android:id="@+id/btn_toasttop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast自定义布局显示顶部"/>
    <Button
        android:id="@+id/btn_toastmiddle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast自定义布局显示中部"/>
    <Button
        android:id="@+id/btn_toastbottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toast自定义布局显示底部"/>
</LinearLayout>